# MataOCR Frontend Environment Variables
# Local development configuration

# API Configuration
NEXT_PUBLIC_API_URL=https://mataorc-production.up.railway.app
NEXT_PUBLIC_APP_URL=https://mataocr.com

# App Metadata
NEXT_PUBLIC_APP_NAME=MataOCR
NEXT_PUBLIC_APP_TAGLINE="See Better, Read Smarter"

# Feature Flags
NEXT_PUBLIC_ENABLE_DEMO=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_AUTH=false

# Supported Languages (matching backend)
NEXT_PUBLIC_SUPPORTED_LANGUAGES=ms,en,zh,ta,ar

# Upload Limits (matching backend)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_TYPES=image/jpeg,image/png,image/jpg,application/pdf
